<h2>Articles#new</h2>

<%= form_with model: @article do |f| %>

  <div class="field">
    <%= f.label :thumbnail %><br />
    <%= f.file_field :thumbnail %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :abstract %><br />
    <%= f.text_field :abstract %>
  </div>

  <div class="field">
    <%= f.label :tag %><br />
    <%= f.text_field :tag %>
  </div>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する" %>
  </div>
<% end %>
