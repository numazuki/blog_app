<h2>Profile</h2>

<%= form_with model: @profile, url: profiles_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>

  <div class="field">
    <%= f.label :site %><br />
    <%= f.text_field :site %>
  </div>

  <div class="field">
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </div>

  <div class="field">
    <%= f.label :residence %><br />
    <%= f.text_field :residence %>
  </div>

  <div class="field">
    <%= f.label :twitter %><br />
    <%= f.text_field :twitter %>
  </div>

  <div class="field">
    <%= f.label :facebook %><br />
    <%= f.text_field :facebook %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>